pipeline {
    agent any

    stages {
        stage('Create Image') {
            steps {
                sh "ls -la"
                sh "docker build -t frontend_image ."
            }
        }

        stage('Run Image') {
            steps {
                sh "docker run -d --name wordladder_fe -p 3000:3000 frontend_image"
            }
        }
    }
}
