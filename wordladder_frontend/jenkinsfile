pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = '8599b32b-e88a-41e1-8586-6c366a135701'
        NETLIFY_AUTH_TOKEN = credentials('netlify-token')
    }

    stages {
        stage('Build') {
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    cd wordladder_frontend
                    ls -la
                    chmod +x node_modules/.bin/react-scripts
                    npm run build
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    yarn global add serve
                    serve -s build
                '''
            }
        }
    }
}
